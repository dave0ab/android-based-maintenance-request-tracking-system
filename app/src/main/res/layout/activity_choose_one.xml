<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/darkgray">



    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText"
        >









        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/background_shape"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="-50dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Ict Maintenance Service Offer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/desktop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnred"
                android:text="Desktop Computer"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/laptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btngreen"
                android:text="Laptop Computer"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/printer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="Printer"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/photocopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="Photocopy Machine"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/projector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="LCD Projector"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/scanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="Scanner"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/netmaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="Network Maintenance"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btnblue"
                android:text="Other"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>










        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            android:background="#FFFDD0"
            app:menu="@menu/navigation_menu_for_request_sender1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b"
                android:orientation="vertical"
                android:layout_alignBottom="@+id/a">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:background="@color/colorPrimary">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/menu_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="40dp"
                        app:shapeAppearance="@style/roundedImageViewRounded"
                        android:paddingLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/navfname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="70dp"
                        android:paddingLeft="45dp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/menu_image2"
                    android:layout_marginBottom="-10dp"
                    android:background="@android:color/black"
                    />
            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>





    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>