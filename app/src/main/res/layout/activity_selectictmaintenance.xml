<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFDD0">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/existedlayout1"
    android:background="#FFFDD0"
        tools:ignore="MissingConstraints">


    <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-6dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:text="Select"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="italic"
            android:layout_marginBottom="20dp"            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        >


        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/existedlayout"
            >


        </LinearLayout>






    </LinearLayout>





    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#FFFDD0"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu_for_technician" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b"
                android:layout_alignBottom="@+id/a">

                <ImageView
                    android:id="@+id/menu_image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:paddingTop="40dp"
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/navfname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="80dp"
                    android:paddingLeft="120dp"
                    android:layout_marginBottom="20dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/menu_image2"
                    android:layout_marginBottom="-10dp"
                    android:background="@android:color/black"
                    />
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>