<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText"
        >




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/relative_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#FFFDD0">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView1"
                >





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--*******create account**********-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtcreate"
                        android:text="Request Form"
                        android:textStyle="italic"
                        android:textSize="40sp"
                        android:textColor="@color/black"
                        android:fontFamily="cursive"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="25dp"/>




                    <LinearLayout
                        android:layout_width="388dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/Fullgme"
                            android:layout_width="194dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtcreate"
                            android:layout_marginTop="15dp"

                            android:paddingLeft="15dp"
                            android:paddingEnd="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="194dp"
                                android:id="@+id/edbuildingno"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:backgroundTint="#B9F8F8F1"
                                android:hint="Building number"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/Fusdsdllgme"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="15sp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtcreate"
                            android:layout_marginTop="15dp"
                            android:paddingStart="10dp"
                            android:paddingLeft="15dp"
                            android:paddingEnd="10dp"
                            android:paddingRight="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="194dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:backgroundTint="#B9F8F8F1"
                                android:hint="Office number"
                                android:id="@+id/edoffice"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <!--*******Full Name**********-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Fullname"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:layout_below="@id/txtcreate"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/Fullnagme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtcreate"

                            android:layout_marginTop="15dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_marginBottom="10sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edpcmodel"
                                android:layout_width="244dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:backgroundTint="#B9F8F8F1"
                                android:hint="Enter Desktop Model Number"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/Fullnagmwe"
                            android:layout_width="105dp"
                            android:layout_marginRight="15sp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtcreate"

                            android:layout_marginTop="15dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="105dp"
                                android:layout_height="wrap_content"
                                android:hint="Quantity"
                                android:backgroundTint="#B9F8F8F1"
                                android:inputType="number"
                                android:id="@+id/edquantity" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!--*******Username**********-->



                    <CheckBox
                        android:layout_marginLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowColor="#040000"
                        android:id="@+id/check1"
                        android:text="DESKTOP HARDWARE MAINTENANCE"
                        android:textStyle="bold" />


                    <!--*******Email**********-->
                    //
                    <CheckBox
                        android:id="@+id/check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"
                        android:text="INSTALLING POWER GEEZ" />


                    <!--*******mobile number**********-->





                    <CheckBox
                        android:id="@+id/check3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"
                        android:text="INSTALLING DIFFERENT SOFTWARE" />

                    <CheckBox
                        android:id="@+id/check4"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:text="DESKTOP FORMAT"
                        android:layout_marginLeft="15sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/check5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"
                        android:text="INSTALLING MS-OFFICE" />
                    <CheckBox
                        android:id="@+id/check6"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15sp"
                        android:layout_height="wrap_content"
                        android:text="INSTALLING ANTI-VIRUS"
                        android:layout_marginBottom="10sp"/>



                    <!--*******password**********-->


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bio"
                        android:layout_marginTop="12dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:textColorHint="@color/Black">


                        <EditText
                            android:backgroundTint="#B9F8F8F1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:inputType="text|textMultiLine"
                            android:gravity="top"
                            android:id="@+id/edmessage"
                            android:textColor="@color/Black"
                            android:textColorHint="@color/Black"
                            android:hint="Message"
                            />
                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/imgid"
                            android:layout_marginBottom="5dp"
                            android:layout_width="219dp"
                            android:layout_height="201dp"
                            android:layout_gravity="center" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/areaCust"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/upload"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/btnblue"
                            android:foregroundGravity="center_vertical"
                            android:text="Upload Photo "
                            app:icon="@android:drawable/stat_sys_upload_done" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <!--*******website**********-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/website"
                        android:layout_marginTop="12dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:textColorHint="@color/Black"
                        android:layout_below="@id/bio"/>


                    <!--*******log in**********-->
                    <Button
                        android:id="@+id/request"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_below="@+id/website"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/blue_button"
                        android:text="Request"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/AlreadyHcavesignin"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:gravity="center_horizontal"
                        android:padding="15dp"
                        android:layout_below="@+id/request"
                        android:text="Already have an account? Sign In."

                        android:textSize="16sp"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/imgbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:text="n"
                        android:textStyle="bold"
                        android:layout_below="@+id/AlreadyHcavesignin"/>

                </LinearLayout>

            </ScrollView>




            <!--*******have account**********-->


        </RelativeLayout>



        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            android:background="#FFFDD0"
            app:menu="@menu/navigation_menu_for_request_sender1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b"
                android:orientation="vertical"
                android:layout_alignBottom="@+id/a">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:background="@color/colorPrimary">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/menu_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="40dp"
                        app:shapeAppearance="@style/roundedImageViewRounded"
                        android:paddingLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/navfname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="70dp"
                        android:paddingLeft="45dp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/menu_image2"
                    android:layout_marginBottom="-10dp"
                    android:background="@android:color/black"
                    />
            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>





    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>